generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int @id @default(autoincrement())
  name     String
  email    String
  password String
}

model weather {
  date         String
  day          String
  temperature  String
  sky          Sky
  observations Observation
  feelsLike    String
  wind         Wind
}

type Sky {
  code String
  text String
}

type Observation {
  time String
  point String
}

type Wind {
  display String
  speed   String
}