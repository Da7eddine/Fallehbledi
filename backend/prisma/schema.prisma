generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model farmer {
  id           Int    @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String @unique
  password     String
  address      String
  location     String
  profileImage String
  status       status  @default(pending)
}

enum status {
  pending
  free    
  Standard 
  Premium   
}


model experts {
  id       Int @id @default(autoincrement())
  firstName     String
  lastName     String
  background    String
  phone        Int
  certificate  String
}

model farmtools {
  id          Int @id @default(autoincrement())
  name        String
  description String
  price       Int
  image       String
  category    String
  quantity    Int
}

model weather {
  id           Int @id @default(autoincrement())
  date         String
  day          String
  temperature  String
  sky          String
  observations String
  feelsLike    String
  windDisplay  String
  windSpeed    String
}

model prices {
  id    Int @id @default(autoincrement())
  title String
  price Int
}