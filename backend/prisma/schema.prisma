generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model farmer {
  id       Int @id @default(autoincrement())
  firstName     String
  lastName     String
  email    String
  password String
  adress   String
  location  String
  profileImage String
  status    status
}
enum status {
  free    String
  Standard String
  Premium   String
}


model experts {
  id       Int @id @default(autoincrement())
  firstName     String
  lastName     String
  background    String
  phone        Int
  certificate  String
}

model farmtools {
  name        String
  description String
  price       Int
  image       String
  category    String
  quantity    Int
}

model weather {
  date         String
  day          String
  temperature  String
  sky          Sky
  observations Observation
  feelsLike    String
  wind         Wind
}

type Sky {
  code String
  text String
}

type Observation {
  time String
  point String
}

type Wind {
  display String
  speed   String
}

